{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es2020",
      "target": "es5",
      "strictNullChecks": true,
      "jsx": "react",
      "allowJs": true,
      "plugins": [
        {
          "name": "typescript-lit-html-plugin"
        }
      ],
      "moduleResolution": "node"
    }
  }